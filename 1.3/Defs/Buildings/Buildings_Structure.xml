<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="DoorBase">
    <defName>PS_PawnDoor</defName>
    <label>pawn door</label>
    <description>Divides rooms. Simple doors must be manually opened, which slows people down. The amount of slowdown depends on what the door is made of.</description>
    <statBases>
      <WorkToBuild>850</WorkToBuild>
    </statBases>
    <graphicData>
      <texPath>Things/Building/Door/DoorSimple_Mover</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <!--  no damage marks because they don't move with the door
        <rect>(0,0.12,1,0.76)</rect>-->
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Door/DoorSimple_MenuIcon</uiIconPath>
    <costStuffCount>25</costStuffCount>
    <designationHotKey>Misc1</designationHotKey>
	<comps>
		<li Class="PawnStorages.CompProperties_PawnStorage">
			<maxStoredPawns>99999</maxStoredPawns>
			<releaseOption>true</releaseOption>
			<releaseAllOption>true</releaseAllOption>
			<convertOption>true</convertOption>
			<idleResearch>true</idleResearch>
		</li>
	</comps>
  </ThingDef>


</Defs>
